{
  "name": "@starter/backend",
  "version": "1.0.0",
  "type": "module",
  "exports": {
    "./*": "./src/*.ts",
    "./services/*": "./src/services/*.ts",
    "./services/auth/*": "./src/services/auth/*.ts",
    "./services/auth/user/*": "./src/services/auth/user/*.ts",
    "./types/*": "./src/types/*.ts",
    "./utils/*": "./src/utils/*.ts"
  },
  "scripts": {
    "db:start": "supabase start",
    "db:stop": "supabase stop",
    "db:reset": "supabase db reset --local && pnpm db:migrate && pnpm db:seed",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:migrate:prod": "sh -c 'set -a && . ./.env.prod && drizzle-kit migrate'",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:seed": "node --import tsx src/seed.ts",
    "typecheck": "tsc"
  },
  "devDependencies": {
    "@starter/tsconfig": "workspace:*",
    "@types/node": "catalog:",
    "drizzle-kit": "catalog:"
  },
  "dependencies": {
    "@starter/logger": "workspace:*",
    "@supabase/supabase-js": "catalog:",
    "better-auth": "catalog:",
    "date-fns": "catalog:",
    "dotenv": "catalog:",
    "drizzle-orm": "catalog:",
    "postgres": "catalog:",
    "uuid": "catalog:",
    "zod": "catalog:"
  }
}
